{
  "name": "Share-Area-Desktop",
  "version": "0.0.0-debug",
  "description": "Share Area Desktop - Share just a section of your screen with others. Perfect for presentations, remote support, and collaboration when you have a higher resolution than your audience.",
  "main": "./out/main/index.js",
  "author": {
    "name": "Marco Kellershoff",
    "email": "marco@kellershoff.net"
  },
  "private": true,
  "license": "MIT",
  "homepage": "https://share-area-desktop.mwco.app",
  "scripts": {
    "format": "prettier --plugin prettier-plugin-svelte --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck-node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "svelte-check": "svelte-check --tsconfig ./tsconfig.json",
    "typecheck": "npm run typecheck-node && npm run svelte-check",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build-unpack": "npm run build && electron-builder --dir",
    "build-windows": "npm run build && electron-builder --win --publish never",
    "build-macos": "./scripts/build.sh PLATFORM=macos",
    "build-linux": "./scripts/build.sh PLATFORM=linux",
    "build-linux-arm64": "PLATFORM=linux-arm64 ./scripts/build.sh",
    "build-linux-debug": "VERSION=0.0.0-debug PLATFORM=linux-debug ./scripts/build.sh",
    "node-packages-update": "ncu -u",
    "node-packages-upgrade": "ncu -u && npm install"
  },
  "dependencies": {
    "@electron-toolkit/utils": "4.0.0",
    "electron-settings": "4.0.4",
    "electron-updater": "6.6.2"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.1.0",
    "@electron-toolkit/tsconfig": "^2.0.0",
    "@electron/rebuild": "4.0.1",
    "@fortawesome/fontawesome-free": "7.1.0",
    "@mistweaverco/electron-notarize-async": "0.0.4",
    "@sveltejs/adapter-node": "5.4.0",
    "@sveltejs/vite-plugin-svelte": "6.2.1",
    "@tailwindcss/vite": "^4.1.17",
    "@types/bun": "^1.3.3",
    "@types/js-yaml": "4.0.9",
    "daisyui": "5.5.5",
    "dotenv": "17.2.3",
    "electron": "^39.2.3",
    "electron-builder": "^26.0.12",
    "electron-log": "5.4.3",
    "electron-vite": "^4.0.1",
    "eslint": "^9.39.1",
    "eslint-plugin-svelte": "^3.13.0",
    "js-yaml": "4.1.1",
    "kit-monorepo": "github:sveltejs/kit",
    "prettier": "3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "svelte": "5.43.14",
    "svelte-awesome-color-picker": "4.1.0",
    "svelte-check": "4.3.4",
    "tailwindcss": "4.1.17",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "vite": "^7.2.4"
  },
  "packageManager": "bun@1.3.3"
}
